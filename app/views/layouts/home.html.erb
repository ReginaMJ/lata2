<style>

  
:root {
  --partenaire-width: 40vw;
  --partenaire-height: 20vh;
  /* --partenaire-elements: 12; */ /* defined with JavaScript */
  --partenaire-elements-displayed: 5;
  --partenaire-element-width: calc(var(--partenaire-width) / var(--partenaireelements-displayed));
  --partenaire-animation-duration: calc(var(--partenaire-elements) * 3s);
}

.partenaire {
  width: var(--partenaire-width);
  height: var(--partenaire-height);
  background-color: #111;
  color: #eee;
  overflow: hidden;
  position: relative;
}
.partenaire:before, .partenaire:after {
  position: absolute;
  top: 0;
  width: 10rem;
  height: 100%;
  content: "";
  z-index: 1;
}
.partenaire:before {
  left: 0;
  background: linear-gradient(to right, #111 0%, transparent 100%);
}
.partenaire:after {
  right: 0;
  background: linear-gradient(to left, #111 0%, transparent 100%);
}
.partenaire-content {
  list-style: none;
  height: 100%;
  display: flex;
  animation: scrolling var(--marquee-animation-duration) linear infinite;
}
/* .marquee-content:hover {
  animation-play-state: paused;
} */
@keyframes scrolling {
  0% { transform: translateX(0); }
  100% { transform: translateX(calc(-1 * var(--partenaire-element-width) * var(--partenaire-elements))); }
}
.partenaire-content li {
  display: flex;
  justify-content: center;
  align-items: center;
  /* text-align: center; */
  flex-shrink: 0;
  width: var(--partenaire-element-width);
  max-height: 100%;
  font-size: calc(var(--partenaire-height)*3/4); /* 5rem; */
  white-space: nowrap;
}

.partenaire-content li img {
  width: 100%;
  /* height: 100%; */
  border: 2px solid #eee;
}

@media (max-width: 600px) {
  html { font-size: 12px; }
  :root {
    --marquee-width: 100vw;
    --marquee-height: 16vh;
    --marquee-elements-displayed: 3;
  }
  .partenaire:before, .partenaire:after { width: 5rem; }
}
